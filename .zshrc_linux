# zsh-vi-mode configs
function zvm_config() {
  ZVM_LINE_INIT_MODE=$ZVM_MODE_INSERT
  ZVM_VI_INSERT_ESCAPE_BINDKEY=jk
  ZVM_KEYTIMEOUT=0.03
}

function zvm_after_init() {
  if [ ! -f ~/.fzf.zsh ]; then 
    fzf --zsh > ~/.fzf.zsh
  fi
  source ~/.fzf.zsh
}

